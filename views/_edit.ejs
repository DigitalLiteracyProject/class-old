<!-- NOTE: THIS TEMPLATE TAKES AN OBJECT 'MODEL' AS INPUT -->

<div class="center-block">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit Model <%= modelName %></h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" action="/<%= modelName %>/update/<%= model.id %>" method="PUT">
                    <fieldset>
                        <% attributes.forEach(function(item){ %>
                            <div class="form-group">
                                <input class="form-control" placeholder="<%= item %>" name="<%= item %>" type="text" value="<%= model[item] %>">
                            </div>
                        <% }); %>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Edit">
                    </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
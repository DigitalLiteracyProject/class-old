<div class="center-block">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please sign up</h3>
                </div>
                <div class="panel-body">
                    <div class="alert alert-warning hidden" id="signup-validation-warning"></div>
                    <form accept-charset="UTF-8" role="form" action="/signup" method="post" id="signup-form">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="Name" name="name" type="text">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Email" name="email" type="text">
                        </div>
                        <div class="form-group" id="password-1-formgroup">
                            <input class="form-control" placeholder="Password" name="password" type="password" value="" id="password-1">
                        </div>
                        <div class="form-group" id="password-2-formgroup">
                            <input class="form-control" placeholder="Password (Again)" name="password_again" type="password" value="" id="password-2">
                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Sign Up" id="signup-button">
                    </fieldset>
                    </form>
                </div>
                <div class="panel-footer">
                    Or <a href="/login">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
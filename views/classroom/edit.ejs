<div class="center-block">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit the <%= classroom.name %> Classroom</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" action="/classroom/update/<%= classroom.id %>" method="PUT" id="classroom-editor">
                    <fieldset>
                        <div class="form-group">
                            <label>Classroom Name</label>
                            <input class="form-control" placeholder="Classroom Name" name="name" type="text" value="<%= classroom.name %>">
                        </div>
                        <div class="form-group">
                            <label>Teachers</label><br/>
                            <% teachers.forEach(function(teacher){ %>
                              <label><input type="checkbox" name="teacher-<%= teacher.id %>" <% _.contains(teacher.classrooms, classroom.id) ? 'checked' : ''%>> <%= teacher.name %></label><br/>
                            <% }) %>
                        </div>
                        <div class="form-group">
                            <label>Students</label><br/>
                            <% students.forEach(function(student){ %>
                              <label><input type="checkbox" name="student-<%= student.id %>"> <%= student.name %></label><br/>
                            <% }) %>
                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Edit">
                    </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<h1><%= classroom.name %></h1>

Teachers:
<ul>
  <% if(classroom.teachers.length > 0){ %>
    <% classroom.teachers.forEach(function(teacher){ %>
      <li><%= teacher.name %></li>
    <% }); %>
  <% } else { %>
    This classroom has no teachers!
  <% } %>
</ul>

Students:
<ul>
  <% if(classroom.students.length > 0){ %>
    <% classroom.students.forEach(function(student){ %>
      <li><%= student.name %></li>
    <% }); %>
  <% } else { %>
    This classroom has no students!
  <% } %>
</ul>

Sessions:
<ul>
  <% if(classroom.classroomsessions.length > 0){ %>
    <% classroom.classroomsessions.forEach(function(classroomsession){ %>
      <li><%= classroomsession.title %></li>
    <% }); %>
  <% } else { %>
    This classroom has no classroom sessions!
  <% } %>
</ul>
<a class="btn btn-success" href="/classroom/<%= classroom.id %>/edit">Edit</a>